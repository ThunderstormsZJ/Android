<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/PageTitleRootStyle"
        android:background="@android:color/black">

        <TextView
            android:id="@id/video_recode_cancel"
            style="@style/PageTitleTextActionStyle"
            android:layout_alignParentLeft="true"
            android:text="取消" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_video_photo" />

        <TextView
            android:id="@id/video_recode_upload"
            style="@style/PageTitleTextActionStyle"
            android:text="上传" />
    </RelativeLayout>

    <SurfaceView
        android:id="@id/video_recode_surface"
        android:layout_width="match_parent"
        android:layout_height="387px" />

    <ProgressBar
        android:id="@id/video_recode_progress"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:progress="50"
        android:progressDrawable="@android:color/holo_green_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82px"
        android:layout_marginTop="150px">

        <ImageButton
            android:id="@id/video_recode_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@id/video_recode_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/ic_user_photo_default" />

        <ImageButton
            android:id="@id/video_recode_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_launcher" />
    </RelativeLayout>
</LinearLayout>