        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/org_info_contact"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:text="13012345678"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构地址"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/org_info_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="address"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLength="10"
                android:text="机构简介"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/org_info_desc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:text="Please write"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附件"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/org_info_attachment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:text="机构附件"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

