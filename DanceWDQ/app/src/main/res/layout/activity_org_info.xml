    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="14dp">

        <LinearLayout
            android:id="@+id/org_info_head_line"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/org_info_logo"
                style="@style/FrescoCircleHeadStyle"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/org_info_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/school_more" />

        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名称"
                android:textColor="#333333"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/org_info_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="OrgName"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="舞种"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/org_info_dances"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/school_more"
                android:gravity="right|center_vertical"
                android:text="Dance Types"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_28" />
        </LinearLayout>

        <TextView style="@style/HorizontalDividerLineStyle" />

