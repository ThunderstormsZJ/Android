<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityLayoutRootStyle"
    tools:context=".home.MainActivity">

    <RelativeLayout
        android:id="@id/main_top_title"
        style="@style/PageTitleRootStyle_Purple">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_title" />

        <TextView
            android:id="@id/main_login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:text="@string/main_login_register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_28" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_title"
        android:orientation="vertical"
        android:padding="14dp"
        android:weightSum="3">

        <ImageView
            android:id="@id/main_videos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/videos" />

        <ImageView
            android:id="@id/main_friends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/friends" />

        <ImageView
            android:id="@id/main_training"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@mipmap/trainings" />

    </LinearLayout>
</RelativeLayout>
