<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5px"
    android:layout_marginTop="5px"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/discover_list_item_photo"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_marginRight="15px"
            android:src="@mipmap/ic_user_photo_default" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/discover_list_item_photo"
            android:layout_toRightOf="@id/discover_list_item_photo"
            android:text="nickName"
            android:textColor="#3366cc"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/discover_list_item_photo"
            android:layout_toRightOf="@id/discover_list_item_photo"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="28px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="time"
            android:textColor="#898989"
            android:textSize="22px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="content"
        android:textColor="@android:color/black"
        android:textSize="24px" />


    <cn.spinsoft.wdq.education.frament.school.MyGridView
        android:id="@+id/gradview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" />

    <View style="@style/HorizontalDividerLineStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:weightSum="14">

        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="location"
            android:textSize="18px" />

        <View style="@style/VerticalDividerLineStyle" />

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:drawableTop="@mipmap/ic_video_like_false"
            android:gravity="center"
            android:text="like"
            android:textSize="18px" />

        <View style="@style/VerticalDividerLineStyle" />

        <TextView
            android:id="@+id/tv_zhuanfa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:drawableTop="@mipmap/ic_video_forward"
            android:gravity="center"
            android:text="forward"
            android:textSize="18px" />

        <View style="@style/VerticalDividerLineStyle" />

        <TextView
            android:id="@+id/tv_liuyan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:drawableTop="@mipmap/ic_video_comment"
            android:gravity="center"
            android:text="comment"
            android:textSize="18px" />
    </LinearLayout>

    <View style="@style/HorizontalDividerLineStyle" />
</LinearLayout>