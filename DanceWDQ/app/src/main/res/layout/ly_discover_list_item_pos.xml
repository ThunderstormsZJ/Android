<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/discover_contest_posImg"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            style="@style/FrescoVideoPosterStyle"/>

        <ImageButton
            android:id="@+id/discover_contest_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_item_simple"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:visibility="gone"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/discover_contest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/barTextColor"
            android:textSize="@dimen/text_size_28"
            />
        <TextView
            android:id="@+id/discover_contest_progess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/contest_progess_state_shape"
            android:layout_marginLeft="4dp"
            android:text="未开始"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:textSize="10sp"
            android:textColor="@color/gray"
            />
    </LinearLayout>
</LinearLayout>