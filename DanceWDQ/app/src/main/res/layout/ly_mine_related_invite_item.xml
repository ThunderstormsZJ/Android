<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingBottom="20dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mine_related_item_photo"
            style="@style/FrescoCircleHeadStyle"
            android:layout_width="43dp"
            android:layout_height="43dp" />

        <TextView
            android:id="@+id/mine_related_item_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mine_related_item_photo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mine_related_item_photo"
            android:text="anotherName"
            android:textColor="@color/colorTextBlue"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_related_item_another"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_size_20"
            android:layout_marginTop="3dp"
            android:text="邀请你成为机构教师"/>

        <TextView
            android:id="@+id/mine_related_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mine_related_item_photo"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mine_related_item_photo"
            android:text="date time"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_size_24" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/mine_related_item_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/booking_comfirm_sel"
        />
</LinearLayout>