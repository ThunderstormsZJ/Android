<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityLayoutRootStyle"
    android:orientation="vertical">

    <RelativeLayout style="@style/PageTitleRootStyle_Purple">

        <TextView
            android:id="@id/video_publish_cancel"
            style="@style/PageTitleBackWhiteStyle"
            android:drawableLeft="@null"
            android:text="取消" />

        <TextView
            style="@style/PageTitleNameWhiteStyle"
            android:text="视频" />

        <TextView
            android:id="@id/video_publish_upload"
            style="@style/PageTitleTextActionStyle"
            android:text="上传" />
    </RelativeLayout>

    <EditText
        android:id="@id/video_publish_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:lines="2"
        android:hint="标题"
        android:textColor="@color/colorTextGrayDarker"
        android:textSize="@dimen/text_size_34" />

    <!--<View-->
    <!--style="@style/HorizontalDividerLineStyle"-->
    <!--android:layout_marginLeft="20px" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@id/video_publish_preview"
            android:layout_width="173dp"
            android:layout_height="92dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/video_publish_timeLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@id/video_publish_sizeLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="大小:"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_34" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/HorizontalDividerLineStyle"
        android:layout_marginLeft="10dp" />

   <!-- <TextView
        android:id="@id/video_publish_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_36" />-->
    <CheckBox
        android:id="@+id/video_publish_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原创"
        android:button="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_36"
        android:drawableRight="@drawable/register_check_button_sel"
        />

    <TextView
        style="@style/HorizontalDividerLineStyle"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="舞种"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_36"/>
        <TextView
            android:id="@+id/video_publish_danceType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="舞种"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/school_more"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_36"/>
    </LinearLayout>

    <TextView
        style="@style/HorizontalDividerLineStyle"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@id/video_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:text="时间"
        android:textSize="@dimen/text_size_36" />

</LinearLayout>