<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="13dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="13dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_list_item_photo"
        style="@style/FrescoCircleHeadStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/comment_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/comment_list_item_photo"
        android:layout_toRightOf="@id/comment_list_item_photo"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/comment_list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_list_item_name"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/comment_list_item_photo"
        android:lineSpacingExtra="2dp"
        android:text="content"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_24" />

    <TextView
        android:id="@+id/comment_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_list_item_content"
        android:layout_toRightOf="@id/comment_list_item_photo"
        android:layout_marginBottom="4dp"
        android:text="time"
        android:textColor="#999"
        android:textSize="@dimen/text_size_22" />

    <TextView
        android:id="@+id/comment_list_item_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/video_comment_list_item_reply"
        android:textColor="@color/colorTextBlue"
        android:textSize="@dimen/text_size_24"
        android:visibility="invisible" />

    <TextView
        style="@style/HorizontalDividerLineStyle"
        android:layout_below="@id/comment_list_item_time"
        android:layout_alignParentRight="true"/>

</RelativeLayout>