<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="oval"
            >

            <stroke
                android:width="1sp"
                android:color="@color/gray"/>

            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">

            <solid android:color="@color/bg_page_title_purple"/>

            <stroke android:color="@color/bg_page_title_purple" android:width="1sp"/>

            <!--<size
                android:width="5dp"
                android:height="5dp"/>-->
        </shape>
    </item>
</layer-list>